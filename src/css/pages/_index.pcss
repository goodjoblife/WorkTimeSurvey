.index__content {
    padding-top: 50px;
}

.btn-scroll-down {
  display: block;
  width: 31px;
  height: 31px;
  margin: 0 auto;
  cursor: pointer;
  margin-top: 50px;
  svg {
    fill: $primary-color;
    transition: fill .3s, transform .3s;
    animation: bounce 3s infinite;
  }
  @media (min-width: $above-desktop) {
    &:hover {
      svg {
        fill: #000;
      }
    }
  }
  &.hide {
    visibility: hidden;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20px);
  }
  60% {
    transform: translateY(-10px);
  }
}

.like-fb-word {
  @mixin font-p;
  text-align: center;
  margin-top: $block-gutter-m;
  font-weight: 400;
  @media (max-width: $below-mobile) {
    margin-top: $block-gutter-s;
  }
}

.icon-github, .icon-facebook-circle {
  transition: fill .3s;
  @media (min-width: $above-desktop) {
    &:hover {
      fill: $gray-dark;
    }
  }
}

#section-faq {
  padding-bottom: 200px;
  background-image: url("../img/people.png");
  background-repeat: no-repeat;
  background-size: 367px 208px;
  background-position: 100% 100%;
  @media (min-width: $above-medium) {
    background-size: 400px auto;
  }
  @media (max-width: $below-small) {
    background-size: 260px auto;
    padding-bottom: 150px;
  }
}

[data-show-trigger] {
  cursor: pointer;
  color: $orange;
  font-weight: 400;
}

/* check form */
#auth_check_indicator {
  width: 32px;
  height: 32px;
  margin-right: 1em;
  vertical-align: middle;
  display: inline-block;
  background: url("data:image/gif;base64,");
}

#auth_check_reminder {
  text-align: center;
  padding: 1em;
}

#has-fee-options {
	height: 0;
	overflow: hidden;
	transition: height .4s;
	&.is-active {
		height: 100px;
	}
}

.please-select-one {
  font-size: 1.1em;
  text-align: center;
  margin: 50px 0 30px 0;
}

.form-year-month {
	display: flex;
  @media (max-width: $below-tablet) {
    flex-direction: column;
  }
	> div {
		flex: 0 1 50%;
		display: flex;
		align-items: center;
    @media (max-width: $below-tablet) {
      flex: 1 1 auto;
      margin-bottom: 10px;
    }
		> label {
			margin: 0 20px 0 10px;
		}
	}
}

.form-salary-group {
  display: flex;
  select {
    flex: 0 0 90px;
    margin-right: 15px;
  }
}

#form-section-salary {
  margin-bottom: $block-gutter-l;
  .form-group--two .form-group {
    @media (max-width: $below-mobile) {
      float: none;
      width: 100%;
      margin-right: 0;
      margin-left: 0;
      &:last-child {
        margin-top: 30px;
      }
    }
  }
}
