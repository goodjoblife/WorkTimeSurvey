.html-editor {
  a {
    color: $blue;
    border-bottom: 1px solid transparent;
    transition: border .3s;
    padding-bottom: 2px;
    @media (min-width: $above-desktop) {
      &:hover {
        border-bottom: 1px solid $blue;
      }
    }
  }
  h2 {
    font-size: 1.6em;
    margin-top: 60px;
    margin-bottom: 20px;
  }
  p {
    @mixin font-p-m;
    margin-bottom: 1em;
  }
  ul {
    margin-left: 1.5em;
    > li {
      list-style: disc;
      @mixin font-p-m;
    }
  }
}
