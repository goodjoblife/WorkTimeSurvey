section(class="search-result")
	h2(class="section__heading") 搜尋 “<span class="search-query">{{job_title_keyword}}</span>” 的工時結果
	div(class="search-result__result")
		div(class="search-result-list accordion")
			div(class="accordion__item search-result-list__item" v-for="group in data")
				button(class="accordion__trigger")
					h3(class="search-result-list__heading") {{group._id}}
					span(class="accordion__icon") <svg role="img"><use xlink:href="#icon-minus"></use></svg>
				div(class="accordion__content")
					table(class="rwd-table company-table")
						thead
							tr
								th(class="col-position") 公司名稱
								th(class="col-type") 職務型態
								th(class="col-day-time") 表訂 / <br>實際工時
								th(class="col-week-time") 一週總工時
								th(class="col-frequency") 加班頻率
								th(class="col-experience") 資歷
								th(class="col-salary") 薪資
								th(class="col-time") 資料時間
						tbody
							tr(v-for="working in group.workings")
								td(data-th="公司名稱")
									span(class="rwd-td") {{working.company.name}}
								td(data-th="職務型態")
									span(class="rwd-td") {{working.employment_type | employment_type_string}}
								td(data-th="表訂 / 實際工時")
									span(class="rwd-td") {{working.day_promised_work_time}} / {{working.day_real_work_time}}
								td(data-th="一週總工時")
									span(class="rwd-td")
										span(class="table-time-bar" data-time="{{working.week_work_time}}" v-bind:style="{ width: working.week_work_time * 2 + 'px' }") {{working.week_work_time}}
								td(data-th="加班頻率")
									span(class="rwd-td")
										span(class="table-frequency-circle" data-frequency="{{working.overtime_frequency}}")
										| {{working.overtime_frequency | overtime_frequency_string}}
								td(data-th="資歷")
									span(class="rwd-td") {{working.experience_in_year | experience_in_year_string}}
								td(data-th="薪資")
									span(class="rwd-td") {{working.salary | salary_string}}
								td(data-th="資料時間")
									span(class="rwd-td") <span class="data-time">{{working | getDataTime}}</span>
	div(class="search-result__status")
		div(class="status-loading" v-show="is_loading")
		div(class="status-no-result" v-show="data.length == 0 && is_loading === false") 找不到結果
