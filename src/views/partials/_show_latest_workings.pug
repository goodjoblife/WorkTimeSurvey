section(class="search-result")
	h2(class="section__heading") 最新工時資料
	div(class="search-result__result")
		table(class="rwd-table latest-table")
			thead
				tr
					th(class="col-company") 公司名稱
					th(class="col-position")
						span 職稱
						span(class="table-sector") 廠區/門市/分公司
					th(class="col-week-time") 一週總工時
					th(class="col-frequency") 加班頻率
					th(class="col-salary") 薪資
					th(class="col-time") 資料時間
			tbody(id="tbody-latest-data")
				tr(v-for="w in workings")
					td(data-th="公司名稱")
						span(class="rwd-td")
							a(href="#/search-and-group/by-company/{{encodeURIComponent(w.company ? w.company.name : '')}}") {{w.company ? w.company.name : ""}}
					td(data-th="職稱 (廠區/門市/分公司)")
						span(class="rwd-td")
							span
								a(href="#/search-and-group/by-job-title/{{encodeURIComponent(w.job_title)}}") {{w.job_title}}
							span(class="table-sector") {{w.sector}}
					td(data-th="一週總工時")
						span(class="rwd-td")
							span(class="table-time-bar" data-time="{{w.week_work_time}}" v-bind:style="{ width: w.week_work_time * 2 + 'px' }") {{w.week_work_time}}
					td(data-th="加班頻率")
						span(class="rwd-td")
							span(class="table-frequency-circle" data-frequency="{{w.overtime_frequency}}")
							| {{w.overtime_frequency | overtime_frequency_string}}
					td(data-th="薪資")
						span(class="rwd-td") {{w.salary | salary_string}}
					td(data-th="資料時間")
						span(class="rwd-td") <span class="data-time">{{w | getDataTime}}</span>
	div(class="search-result__status")
		div(class="status-loading" v-show="is_loading")
		div(class="status-no-result" v-show="workings.length == 0 && is_loading === false") 找不到結果
